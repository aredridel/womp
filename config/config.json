{

    "express": {
        "view cache": false,
        "view engine": "dust"
    },

    "view engines": {
        "dust": {
            "module": "adaro",
            "renderer": {
                "method": "dust",
                "arguments": [
                    {
                        "helpers": [
                            {
                                "name": "dust-makara-helpers",
                                "arguments": {
                                    "localeRoot": "path:locales",
                                    "autoloadTemplateContent": true
                                }
                            }
                        ]
                    },
                    {
                        "views": "config:express.views",
                        "view engine": "config:express.view engine",
                        "specialization": "config:specialization"
                    }
                ]
            }
        }
    },
    

    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "en-US"
    },
    
    

    "middleware": {

        "static": {
            "module": {
                "arguments": [ "path:./.build" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        },

        "locale": {
            "priority": 95,
            "enabled": true,
            "module": {
                "name": "express-bcp47",
                "arguments": [{ "defaultLocale": "en-US", "vary": true }]
            }
        },

        "fileNotFound": {
            "enabled": true,
            "priority": 130,
            "module": {
                "name": "kraken-js/middleware/404",
                "arguments": [ "errors/404" ]
            }
        }

    }
}
